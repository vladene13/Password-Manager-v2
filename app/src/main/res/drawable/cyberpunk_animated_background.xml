<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#0A1128"
                android:centerColor="#121228"
                android:endColor="#0F0F20"
                android:type="linear"/>
        </shape>
    </item>

    <!-- Circuit Lines -->
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50"
            android:pivotY="50">
            <shape android:shape="rectangle">
                <solid android:color="#1A00FFD4"/>
                <stroke
                    android:width="1dp"
                    android:color="#4000FFD4"
                    android:dashWidth="5dp"
                    android:dashGap="3dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>